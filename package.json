{
  "name": "@hyphaene/hexa-rag-mcp",
  "version": "0.1.0",
  "description": "Semantic search MCP server for your codebase using PostgreSQL + pgvector + Ollama",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp-server.d.ts",
      "import": "./dist/mcp-server.js"
    }
  },
  "bin": {
    "hexa-rag-mcp": "./dist/cli.js",
    "hexa-rag-mcp-server": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev:ingest": "tsx src/ingest.ts",
    "dev:search": "tsx src/search.ts",
    "dev:cli": "tsx src/cli.ts"
  },
  "keywords": [
    "vector-search",
    "semantic-search",
    "rag",
    "embeddings",
    "postgresql",
    "pgvector",
    "ollama",
    "mcp",
    "model-context-protocol",
    "claude",
    "codebase-search"
  ],
  "author": "Maximilien",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyphaene/hexa-rag-mcp"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "glob": "^11.0.0",
    "pg": "^8.13.0",
    "pgvector": "^0.2.0",
    "ts-morph": "^27.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "ollama": ">=0.5.0"
  },
  "peerDependenciesMeta": {
    "ollama": {
      "optional": true
    }
  }
}
